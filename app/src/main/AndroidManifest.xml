<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eramiro.nicestart">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcherray"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcherray_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.First">
        <activity
            android:name=".LoginAlteris"
            android:exported="true"
            />

        <activity
            android:name=".Splash"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:exported="true">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Signup"
            android:exported="true"
            android:parentActivityName=".Login"
            android:theme="@style/ActionTheme" />
        <activity
            android:name=".Main"
            android:exported="true"
            android:theme="@style/ActionTheme" />
        <activity
            android:name=".MainBn"
            android:exported="true"
            android:label="@string/title_activity_main_bn"
            android:theme="@style/Theme.First.NoActionBar" />
        <activity
            android:name=".MainBab"
            android:exported="true"
            android:theme="@style/Theme.First" />
        <activity
            android:name=".ScrollingActivity"
            android:exported="true"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/Theme.First.NoActionBar" />
    </application>

</manifest>